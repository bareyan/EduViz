# =============================================================================
# EduViz Backend - Minimal Environment Template
# =============================================================================
# Keep this file small and focused on the variables most teams actually set.
# For all tuning knobs (retention, logging, rate limits, etc), see:
#   .env.advanced.example
# Overview-mode duration controls also live in .env.advanced.example

# AI backend selection
# false = Gemini API (default), true = Vertex AI
USE_VERTEX_AI=false

# Gemini API key (required when USE_VERTEX_AI=false)
GEMINI_API_KEY=your_gemini_api_key_here

# Vertex AI settings (required when USE_VERTEX_AI=true)
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=us-central1

# Startup safety: fail fast if required tools are missing.
# Recommended true in production.
STARTUP_STRICT_RUNTIME_CHECKS=true

# Upload cap (bytes). Default in code is 50MB.
MAX_UPLOAD_SIZE=52428800

# -----------------------------------------------------------------------------
# Password authentication
# -----------------------------------------------------------------------------
# Set AUTH_PASSWORD to enable login-protected API routes.
# If empty, auth middleware is disabled.
AUTH_ENABLED=true
AUTH_PASSWORD=change_me


# Script generation PDF strategy:
# false (default): send original PDF + page-range guidance (faster)
# true: physically slice per-section PDFs before LLM calls (slower, optional)
ENABLE_SECTION_PDF_SLICES=true
# Only slice PDFs when total_pages >= this value (helps avoid 1-2 page over-splitting)
SECTION_PDF_SLICE_MIN_PAGES=3
